@model IList<InmobiliariaOrtiz_Pascuali.Models.Pago>

@{
    ViewData["Title"] = "Lista de Pagos";
}

<div class="container text-center">
    <h5 class="m-4">@ViewData["Title"]</h5>

    <div class="row border my-4 mx-5 rounded bg-white shadow-sm">
        <div class="d-flex flex-row bg-white rounded-top text-white w-100 align-items-center p-3">
            <div class="position-relative mx-1">
                <input class="rounded-pill h6 p-2" placeholder="Fecha" id="" name="" type="text">
                <div class="d-flex align-items-center position-absolute end-0 top-50 px-2">
                    <i class="fa-solid fa-magnifying-glass fa-xs agrandar" style="color: rgba(0, 0, 0, 0.648);"
                        id="btnSearchPago"></i>
                </div>
            </div>

        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Número de Pago</th>
                    <th scope="col">Número de Contrato</th>
                    <th scope="col">Monto del Pago</th>
                    <th scope="col">Mes de Pago</th>
                    <th scope="col">Estado de Pago</th>
                    <th scope="col">Pagar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in Model)
                {
                    <tr>
                        <td>@pago.IdPago</td>
                        <td>@pago.IdContrato</td>
                        <td>@pago.Monto</td>
                        <td>@pago.Fecha_pago.ToString("dd/MM/yyyy")</td>
                        <td>@if (pago.Estado)
                            {
                                <span style="color: green;">Pagado</span>
                            }
                            else
                            {
                                <span style="color: red;">Pendiente</span>
                            }
                        </td>
                        <td>
                            <div class="w-100">
                                <a asp-action="Pagar" asp-route-id="@pago.IdPago" title="Ver mas">
                                    <i class="fa-solid fa-money-bill px-1 text-success"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class=" m-3">
            <a class="btn btn-secondary" asp-action="Index">Volver</a>
        </div>
    </div>
</div>
