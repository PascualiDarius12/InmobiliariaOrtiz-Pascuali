@model IEnumerable<Inquilino>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row border my-4 rounded bg-white shadow-sm" id="">
    <div class="d-flex flex-row bg-white rounded-top text-white w-100 align-items-center">
        <div class="position-relative mx-1">
            <input class="rounded-pill h6 p-2" placeholder="Dni" id="" name="" type="text">
            <div class="d-flex align-items-center position-absolute end-0 top-50 px-2">
                <i class="fa-solid fa-magnifying-glass fa-xs agrandar" style="color: rgba(0, 0, 0, 0.648);"
                    id="btnSearchUser"></i>
            </div>
        </div>
        <div class="d-flex justify-content-center p-3 w-100 align-items-end flex-column">
            <a asp-action="editar" asp-controller="Inquilino">
                <i class="fa-solid fa-plus text-dark h4" id=""></i>
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Dni</th>
                <th scope="col">Modificar</th>
                <th scope="col">Borrar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.IdInquilino</th>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Dni</td>
                    <td>
                        <div class="w-100">
                            <a asp-action="editar" asp-route-id="@item.IdInquilino" title="Editar">
                                <i class="fa-solid fa-pen px-1 text-warning"></i>
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-100">

                            <a asp-action="Eliminar" asp-route-id="@item.IdInquilino" title="Eliminar">
                                <i class="fa-solid fa-circle-minus px-1 text-danger"></i>
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
