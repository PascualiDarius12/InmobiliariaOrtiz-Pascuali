@model Inmueble
@{
    ViewData["Title"] = "Registrar Inmueble";
    var listaPropietarios = (IList<Propietario>)ViewBag.Propietarios;
}


<div class="row w-100 justify-content-center">
	<div class="col-md-4">
		<form asp-action="Modificar">
            <p>Registrar Inmueble:</p>
			 <div class="form-group d-none">
                <input asp-for="IdInmueble" type="text" class="form-control" id="" readonly>
            </div>
			<div class="form-group">
				<label asp-for="Direccion" class="control-label"></label>
				<input asp-for="Direccion" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Coordenadas" class="control-label"></label>
				<input asp-for="Coordenadas" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Precio" class="control-label"></label>
				<input asp-for="Precio" class="form-control" />
			</div>
			<div class="form-group">
				<label class="control-label">Propietario</label>
				<select class="form-select" input asp-for="IdPropietario">
					@foreach (var item in listaPropietarios)
					{
						 @:<option @(item.IdPropietario==Model.IdPropietario ? "selected" : "") value="@item.IdPropietario">@(item.Apellido+" "+item.Nombre+" "+item.IdPropietario)</option>
					}
				</select>
			</div>
			<div class="form-group m-3">
				<button type="submit" class="btn btn-primary">Guardar</button>
				<a class="btn btn-secondary" asp-action="Index">Volver</a>
			</div>
		</form>
	</div>
</div>
