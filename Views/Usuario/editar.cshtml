@model Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h5 class="m-4 text-center w-100">@ViewData["Title"]</h5>

<div class="container d-flex flex-row justify-content-center">
    <form class="card p-3 m-2" asp-action="editar" method="post">
        <input type="hidden" asp-for="IdUsuario" readonly />
        <p>Datos Personales:</p>
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Apellido"></label>
            <input asp-for="Apellido" class="form-control" />
        </div>

        <div class="w-100 d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
    <form class="card p-3 m-2" asp-action="">
        <p>Datos de Usuario:</p>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Clave"></label>
            <input asp-for="Clave" class="form-control" />
        </div>
        <div class="w-100 d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
    <form class="card p-3 m-2" action="">

        <label class="control-label">Rol:</label>
        <select class="form-select" name="Rol">
        @foreach (var kvp in (IDictionary<int, string>)ViewBag.Roles)
        {
        @:<option @(kvp.Value==Model.RolNombre? "selected" : "") value="@kvp.Key">@kvp.Value</option>
        }
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span> 
        <div class="w-100 d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
    <form class="card p-3 m-2" action="">
        <p>Avatar:</p>
        <img class="w-25 m-2" src=@Model.Avatar alt="">
        <div class="form-group">
            <label asp-for="AvatarFile" class="control-label">Archivo:</label>
            <input type="file" name="AvatarFile" class="form-control" />
            <span asp-validation-for="AvatarFile" class="text-danger"></span>
        </div>
        <div class="w-100 d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>
