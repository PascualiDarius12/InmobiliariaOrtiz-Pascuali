@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<h5 class="m-4 text-center w-100">@ViewData["Title"]</h5>

<div class="row border my-4 mx-5 rounded bg-white shadow-sm">
    <div class="d-flex flex-row bg-white rounded-top text-white w-100 align-items-center">
        <div class="col-lg-6">
            <form id="searchForm" asp-action="BuscarPorDNI" method="get">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="buscar Usuario por dni" name="dni">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit" form="searchForm">
                            <i class="fas fa-search"></i> <!-- icono puedo ponerle un texto tambien -->
                        </button>
                    </span>
                </div>
            </form>
        </div>

        <div class="d-flex justify-content-center p-3 w-100 align-items-end flex-column">
            <a asp-action="Registro" asp-controller="Usuario">
                <i class="fa-solid fa-plus text-dark agrandar h4" id=""></i>
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Email</th>
                <th scope="col">Rol</th>
                <th scope="col">Modificar</th>
                <th scope="col">Borrar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.IdUsuario</th>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Email</td>
                    <td>@item.RolNombre</td>

                    <td>
                        <div class="w-100">
                            <a asp-action="editar" asp-route-id="@item.IdUsuario" title="editar">
                                <i class="fa-solid fa-pen px-1 text-warning"></i>
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-100">
                            <div class="w-100">

                                <a asp-action="Eliminar" asp-route-id="@item.IdUsuario" title="Eliminar">
                                    <i class="fa-solid fa-circle-minus px-1 text-danger"></i>
                                </a>

                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
